ARCH_CFLAGS += -Iarch/x86/include -D __x86__

ifeq ($(TARGET_ARCH), x86_64)
include arch/x86_64/make.config
else
include arch/i386/make.config
endif

SOURCE_DIRS += arch/x86/
ARCH_SRCS += \
    arch/x86/io/ps2.c \
	arch/x86/io/uart.c \
	arch/x86/io/pci_io.c \
	arch/x86/pic.c \
	arch/x86/pit.c \
	arch/x86/syscall.c \
	arch/x86/vga.c \
