{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ISOs (x86_64)",
            "type": "shell",
            "command": "make TARGETS=x86_64 geniso",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build ISOs (i386)",
            "type": "shell",
            "command": "make TARGETS=i386 geniso",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Bochs",
            "type": "shell",
            "command": "make geniso && bochs",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run QEMU (i386)",
            "type": "shell",
            "dependsOn": [
                "Build ISOs (i386)"
            ],
            "command": "qemu-system-i386 -enable-kvm -monitor stdio -d cpu_reset -cdrom k4-i386.iso",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run QEMU (x86_64)",
            "type": "shell",
            "dependsOn": [
                "Build ISOs (x86_64)"
            ],
            "command": "qemu-system-x86_64 -enable-kvm -monitor stdio -d cpu_reset -cdrom k4-x86_64.iso",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Debug QEMU (x86_64)",
            "type": "process",
            "dependsOn": [
                "Build ISOs (x86_64)"
            ],
            "command": "${workspaceFolder}/run_thing.sh",
            "problemMatcher": []
        },
        {
            "label": "Debug QEMU (i386)",
            "type": "shell",
            "dependsOn": [
                "Build ISOs (i386)"
            ],
            "command": "qemu-system-x86_64 -enable-kvm -monitor stdio -d cpu_reset -cdrom k4-x86_64.iso -S -s",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}