    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "Debug QEMU (i386)",
            "executable": "./kernel/bin/i386/k4-i386.kern",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "gdb",
            "request": "attach",
            "name": "Debug QEMU (x86_64)",
            "executable": "./kernel/bin/x86_64/k4-x86_64.kern",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceRoot}"
        },
    ]
}