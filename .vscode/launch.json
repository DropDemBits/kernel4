{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "Debug QEMU (i386)",
            "executable": "./kernel/bin/i386/k4-i386.kern",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Launch w/ GDB (x86_64)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/x86_64/kernel/k4-x86_64.kern",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "targetArchitecture": "x86_64",
            "MIMode": "gdb",
            "customLaunchSetupCommands": [
                {
                    "text": "target remote localhost:1234"
                },
                {
                    "text": "file ${workspaceFolder}/build/x86_64/kernel/k4-x86_64.kern",
                    "description": "Load binary."
                },
                {
                    "text": "break default_exception",
                    "description": "Break on exception."
                },
            ],
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "Debug QEMU (x86_64)"
        },
    ]
}